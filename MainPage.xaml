<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MTM_WIP_Application_MAUI.MainPage"
             Title="MTM WIP Inventory">

    <ScrollView>
        <VerticalStackLayout 
            Padding="20"
            Spacing="15">
            
            <!-- Header -->
            <Label 
                Text="Manitowoc Tool and Manufacturing"
                Style="{StaticResource Headline}"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1" />
            
            <Label 
                Text="Work in Progress Inventory Management"
                Style="{StaticResource SubHeadline}"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level2" />

            <!-- User Info Section -->
            <Frame BackgroundColor="LightBlue" Padding="10" CornerRadius="5">
                <VerticalStackLayout Spacing="5">
                    <Label Text="User Information" FontAttributes="Bold" />
                    <Label x:Name="UserLabel" Text="User: Default User" />
                    <Label x:Name="VersionLabel" Text="Version: 1.0.0" />
                </VerticalStackLayout>
            </Frame>

            <!-- Inventory Input Section -->
            <Frame BackgroundColor="LightGreen" Padding="10" CornerRadius="5">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Inventory Entry" FontAttributes="Bold" />
                    
                    <Entry x:Name="PartIdEntry" 
                           Placeholder="Part ID"
                           SemanticProperties.Hint="Enter the part identification number" />
                    
                    <Entry x:Name="LocationEntry" 
                           Placeholder="Location"
                           SemanticProperties.Hint="Enter the storage location" />
                    
                    <Entry x:Name="OperationEntry" 
                           Placeholder="Operation"
                           SemanticProperties.Hint="Enter the operation code" />
                    
                    <Entry x:Name="QuantityEntry" 
                           Placeholder="Quantity"
                           Keyboard="Numeric"
                           SemanticProperties.Hint="Enter the quantity" />
                    
                    <Entry x:Name="NotesEntry" 
                           Placeholder="Notes (Optional)"
                           SemanticProperties.Hint="Enter any additional notes" />
                </VerticalStackLayout>
            </Frame>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                <Button x:Name="AddInventoryBtn"
                        Text="Add Inventory"
                        Grid.Column="0"
                        BackgroundColor="Green"
                        TextColor="White"
                        Clicked="OnAddInventoryClicked"
                        SemanticProperties.Hint="Add new inventory item" />
                
                <Button x:Name="RemoveInventoryBtn"
                        Text="Remove Inventory"
                        Grid.Column="1"
                        BackgroundColor="Red"
                        TextColor="White"
                        Clicked="OnRemoveInventoryClicked"
                        SemanticProperties.Hint="Remove inventory item" />
                
                <Button x:Name="TransferInventoryBtn"
                        Text="Transfer"
                        Grid.Column="2"
                        BackgroundColor="Orange"
                        TextColor="White"
                        Clicked="OnTransferInventoryClicked"
                        SemanticProperties.Hint="Transfer inventory between locations" />
            </Grid>

            <!-- Current Status -->
            <Frame BackgroundColor="LightYellow" Padding="10" CornerRadius="5">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Current Operation Status" FontAttributes="Bold" />
                    <Label x:Name="StatusLabel" Text="Ready for input" />
                </VerticalStackLayout>
            </Frame>

            <!-- Quick Access -->
            <Button x:Name="ViewInventoryBtn"
                    Text="View Current Inventory"
                    BackgroundColor="Blue"
                    TextColor="White"
                    Clicked="OnViewInventoryClicked"
                    SemanticProperties.Hint="View all current inventory items" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>