<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MTM_MAUI_Application.Views.MainPage"
             Title="MTM WIP Application">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
            
            <Image Source="dotnet_bot.png"
                   HeightRequest="185"
                   Aspect="AspectFit"
                   SemanticProperties.Description="MTM logo" />

            <Label x:Name="WelcomeLabel"
                   Text="Welcome to MTM WIP Application"
                   Style="{DynamicResource TitleLabel}"
                   SemanticProperties.HeadingLevel="Level1" />

            <Label Text="Cross-platform inventory management for MTM WIP processes"
                   Style="{DynamicResource SubtitleLabel}"
                   SemanticProperties.HeadingLevel="Level2"
                   SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            <Button x:Name="CounterBtn"
                    Text="Get Started"
                    SemanticProperties.Hint="Navigate to inventory management"
                    Clicked="OnCounterClicked"
                    HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>